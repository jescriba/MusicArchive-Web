<script src='/scripts/dropzone.js' type='text/javascript'></script>
<h2 class="form-signin-heading">New Song</h2>
<%= form_for :song, as: :post, url: songs_path do |f| %>
  <%= f.text_field :name, placeholder: "Name", class: "form-control" %><br/>
  <%= f.text_field :description, placeholder: "Description", class: "form-control" %><br/>
  <p>Artist names comma separated, case sensitive</p>
  <%= f.text_field :artist_names, placeholder: "Artist Names", class: "form-control" %><br/>
  <%= f.text_field :album_name, placeholder: "Album Name", class: "form-control" %><br/>
  <p>Recorded Date<p>
  <div id="date-picker"><%= f.date_select :recorded_date, class: "form-control"  %><br/></div>
  <%= f.file_field :song, class: "dropzone", id: "drop-songs" %><br/>
  <div id="date-picker"><%= f.submit "Create", class: "btn btn-lg btn-primary btn-block" %></div>
<% end %>
